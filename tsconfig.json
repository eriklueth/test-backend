{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"outDir": "./dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"skipLibCheck": true // remove this line if you want to check for library errors
	},
	"include": ["src/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}